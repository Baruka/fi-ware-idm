<% if current_subject.is_a?(Organization) && resource.grants_roles?(current_subject) %>
  <div class="tab-pane" id="authorize-<%= dom_id current_subject %>">
    <%= render partial: 'contacts/add_button',
               locals: {
                 sender: current_subject,
                 type: [ :user, :group ]
               }
    %>
    
    <%= render partial: 'contacts/contact',
               collection: current_subject.sent_contacts.first(12) %>
  </div>
<% end %>
