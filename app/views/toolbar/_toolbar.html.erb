<div class="nav menu-toolbar affix" role="complementary" data-spy="affix" data-offset-top="65" data-offset-bottom="200">
  <h5 class="hidden-xs hidden-sm">Identity Manager</h5>
  <h5 class="hidden-xs hidden-md hidden-lg">IdM</h5>
  <ul class="main_nav">
    <li class="home<%= ' active' if controller.controller_name == 'home' %>">
      <%= link_to home_path do %>
        <h2><i class='fa fa-home'></i><span class="hidden-xs hidden-sm"><%= t('toolbar.home') %></span></h2>
      <% end %>
    </li>

    <% if current_subject.is_a? User %>
      <li class="organizations<%= ' active' if controller.controller_name == 'organizations' %>">
        <%= link_to organizations_path do %>
          <h2><i class='fa fa-group'></i><span class="hidden-xs hidden-sm"><%= t('toolbar.organizations')%></span></h2>
        <% end %>
      </li>
    <% else %>
      <li class="members<%= ' active' if controller.controller_name == 'contacts' %>">
        <%= link_to contacts_path do %>
          <h2><i class='fa fa-group'></i><span class="hidden-xs hidden-sm"><%= t('toolbar.members')%></span></h2>
        <% end %>
      </li>
    <% end %>

    <li class="my-applications<%= ' active' if controller.controller_name == 'applications' %>">
      <%= link_to applications_path do %>
        <h2><i class='fa fa-laptop'></i><span class="hidden-xs hidden-sm"><%= t('toolbar.applications') %></span></h2>
      <% end %>
    </li>

    <% if can? :update, Site.current %>
      <hr>
      <li class="notify<%= ' active' if controller.controller_name == 'notifications' %>">
        <%= link_to new_notification_path do %>
          <h2><i class='fa fa-comment'></i><span class="hidden-xs hidden-sm">Notify</span></h2>
        <% end %>
      </li>

      <li class="administrators<%= ' active' if controller.controller_name == 'administrators' %>">
        <%= link_to administrators_path do %>
          <h2><i class='fa fa-wrench'></i><span class="hidden-xs hidden-sm">Administrators</span></h2>
        <% end %>
      </li>
    <% end %>

  </ul>
</div>
<script>
  $('.menu-toolbar').affix({
      offset: {
        top: 65

      }
    })
</script>