<section class="organizations-list">
  <% current_user.organizations.first(5).each do |org| %>
    <%= link_to org do %>
      <%= image_tag org.logo.url(:small) %>
    <% end %>

    <div class="name">
      <%= link_to org.name, org %>
    </div>

    <% if can? :represent, org %>
      <%= link_to "switch", s: org.slug %>
    <% end %>
   
    <hr class="soften">
  <% end %>
</section> 
