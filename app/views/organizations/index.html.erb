<div id="organizations">
  <header>
    <h3>
      <%= link_to "Create Organization", new_organization_path %>

      Organizations
    </h3>
  </header>

 
  <div class="tabbable"> 
    <div class="search-nav hidden-phone">
      <%= form_tag search_path, method: 'get', class: "navbar-search pull-left" do %>
        <%= text_field_tag :q, nil, autocomplete: :off, class: 'search-query input-small', placeholder: t('search.name'), "data-min_query" => SocialStream::Search::MIN_QUERY %>
      <% end %>
      <%= javascript_tag do %>
        $(function() {
          SocialStream.SearchHeader.show();
        });
      <% end %>
      <div class="mat">
        <%= render partial: 'layouts/loading' %>

        <div class="query_too_short">
          <%= t 'search.at_least', count: SocialStream::Search::MIN_QUERY %>
        </div>

        <div class="no_results">
          <%= t 'search.nothing' %>
        </div>

        <div class="results">
        </div>
      </div>
    </div>
    <ul class="nav nav-tabs">
      <li class="<%= 'active' if params[:section].blank? %>">
        <a href="#owned" data-toggle="tab">Owned</a>
      </li>
      <li class="<%= 'active' if params[:section] == 'others' %>">
        <a href="#other" data-toggle="tab">Others</a>
      </li>
    </ul>
  </div>
  <div class="tab-content">
    <div class="tab-pane<%= ' active' if params[:section].blank? %>" id="owned">
      <% if params[:section].blank? %>
        <%= render partial: 'organizations/list',
                   object: collection %>
      <% end %>
    </div>

    <div class="tab-pane<%= 'active' if params[:section] == 'others' %>" id="other">
      <% if params[:section] == 'others' %>
        <%= render partial: 'organizations/list',
                   object: collection %>
      <% end %>
    </div>
  </div>
</div>
