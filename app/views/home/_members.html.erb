<div class="panel panel-default members">
  <div class="panel-heading">
    <h5 class="panel-title">Members</h5>
    <%= render partial: "contacts/add_button",
               locals: {
                 sender: current_subject,
                 type: :user
               }
    %>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <%= render Contact.index(subject: current_subject).first(5) %>
    </li>
  </ul>

  <div class="panel-footer">
    <%= link_to 'View more',  contacts_path, :class => "view-all"  %>
  </div>
</div>