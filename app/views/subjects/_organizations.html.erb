<section class="organizations well">
  <% if subject.organizations.present? %>
    <ul class="organizations-list list-group">
      <li class="list-group-item">
        <%= render subject.organizations %>
      </li>
    </ul>
  <% else %>
    <% if profile_subject_is_current? %>
      Aren't you member of any organization?

      <%= link_to 'Explore them', organizations_path %>
    <% else %>
      <%= subject.name %> is not a member of any organization.
    <% end %>
  <% end %>
</section>

