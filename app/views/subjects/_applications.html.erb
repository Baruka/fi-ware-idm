<section class="applications">
  <% if subject.applications.present? %>
    <section class="applications-list">
      <%= render subject.applications %>
    </section>
  <% else %>
    <% if profile_subject_is_current? %>
      Haven't you any application?

      <%= link_to 'Create application', new_application_path %>
    <% else %>
      <%= subject.name %> has not any application.
    <% end %>
  <% end %>
</section>

